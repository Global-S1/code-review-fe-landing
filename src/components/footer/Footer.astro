---
import Logo from "@components/Logo.astro";
import FooterListItem from "./footer-list-item.astro";
import type { TLanguage } from "@i18n/config/interfaces/languaje.interface";
import { translator } from "@i18n/config/translator";

const lang = Astro.params.lang as TLanguage;
const t = translator(lang);
const content = t.footer;
---

<footer
  class="container mx-auto md:flex items-center justify-between md:px-12 py-12"
  itemscope
  itemtype="https://schema.org/WPFooter"
  role="contentinfo"
>
  <Logo class="justify-center md:justify-start" />

  <ul
    class="grid grid-cols-3 divide-x divide-white text-center w-full md:w-auto h-full content-center justify-items-center"
  >
    {
      content.options.map((e) => (
        <FooterListItem id={e.id}>{e.label}</FooterListItem>
      ))
    }
  </ul>
</footer>
