---
interface Props {
  id: string;
}

const { id } = Astro.props as Props;
---

<li
  class="relative group cursor-pointer px-2 md:px-4 w-full"
  onclick={`document.getElementById('${id}')?.scrollIntoView({ behavior: 'smooth' })`}
>
  <span><slot /></span>
  <div
    class="absolute left-0 -bottom-1 w-0 h-1 group-hover:w-full bg-primary transition-all duration-150"
  >
  </div>
</li>
