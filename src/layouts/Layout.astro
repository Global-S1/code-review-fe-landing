---
import type { TLanguage } from "@i18n/config/interfaces/languaje.interface";
import SwitchThemes from "@components/SwitchThemes.astro";
import "@styles/global.css";
import SwitchLang from "@components/SwitchLang.astro";

interface Props {
  title?: string;
  lang: TLanguage;
  t: any;
}

const { lang, title = "CODARI Pro", t } = Astro.props as Props;
---

<!doctype html>
<html lang={lang} data-theme="theme1" class="bg-dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <SwitchThemes />
    <SwitchLang languages={t.languageOptions} />
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
