---
import Footer from "@components/footer/Footer.astro";
import type { TLanguage } from "@i18n/config/interfaces/languaje.interface";
import "@styles/global.css";

interface Props {
  title?: string;
  lang: TLanguage;
}

const { lang, title = "CODARI Pro" } = Astro.props as Props;
---

<!doctype html>
<html lang={lang} data-theme="theme1" class="bg-dark text-white">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Put your description here." />
    <title>{title}</title>
    <!-- TODO: Investigar como informar al crawler sobre el soporte multi idioma -->
    <link rel="alternate" lang="es" href="https://tusitio.com/es" />
  </head>
  <body>
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
