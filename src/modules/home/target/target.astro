---
import type { TLanguage } from "@i18n/config/interfaces/languaje.interface";
import TargetCard from "./target-card.astro";
import { translator } from "@i18n/config/translator";
import H2 from "@components/titles/H2.astro";

const lang = Astro.params.lang as TLanguage;
const t = translator(lang);
const content = t.pages.home.target;
---

<section class="container max-w-6xl mx-auto px-6">
  <H2>
    {content.title}
  </H2>

  <div
    class="mt-8 md:mt-12 grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-y-12 justify-items-center"
  >
    {
      content.card.map((e) => (
        <TargetCard img={e.img} label={e.label} isGradient={e.isGradient} />
      ))
    }
  </div>
</section>
