---
import type { TLanguage } from "@i18n/config/interfaces/languaje.interface";
import { translator } from "@i18n/config/translator";
import PointsLeft from "@components/background/points-left.astro";
import BenefitsItem from "./benefit-item.astro";

const lang = Astro.params.lang as TLanguage;
const t = translator(lang);
const content = t.pages.home.benefits;
---

<section class="relative">
  <div
    class="flex flex-col md:flex-row items-center justify-evenly gap-6 md:gap-12 container mx-auto px-4 md:px-12 my-64 min-h-[50vh]"
    id="benefits"
  >
    <h3
      class="font-grandis heading-h3 text-center md:text-left [&>span]:mb-4 [&>span]:block mb-4"
      set:html={content.title}
    />
    <div class="relative w-full md:w-auto">
      <div
        class="-z-10 absolute w-full h-full left-0 top-0 bg-radial from-white from-30% to-gray-500 opacity-15"
      >
      </div>
      <ul
        class="px-8 py-16 w-full flex flex-col gap-8 rounded-lg overflow-hidden"
      >
        {
          content.card.map((i) => (
            <BenefitsItem percent={i.percent} label={i.text} />
          ))
        }
      </ul>
    </div>
  </div>
  <PointsLeft />
</section>
