<html lang="es">
  <head>
    <style>
      body {
        background: linear-gradient(to bottom right, #01255a, #005745);
        color: #fff;
        display: grid;
        place-content: center;
        height: 100vh;
        margin: 0;
      }

      .loader-wrapper {
        position: relative;
        width: 120px;
        height: 120px;
      }

      .pulse {
        position: absolute;
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.2);
        animation: pulse 2s infinite;
      }

      .logo {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 60px;
        height: 60px;
        transform: translate(-50%, -50%);
        border-radius: 50%;
        z-index: 2;
      }

      @keyframes pulse {
        0% {
          transform: scale(0.8);
          opacity: 0.7;
        }
        70% {
          transform: scale(1.4);
          opacity: 0;
        }
        100% {
          opacity: 0;
        }
      }
    </style>
  </head>
  <body>
    <div class="loader-wrapper">
      <div class="pulse"></div>
      <img src="/logo.svg" alt="Prompt engine" class="logo" />
    </div>
  </body>
</html>
